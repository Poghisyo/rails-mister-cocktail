

<h1>Cocktails</h1>


<%= link_to 'Add a cocktail', new_cocktail_path, class: 'btn btn-success'  %>

<% @cocktails.each do |cocktail| %>
  <div class="cocktail-list">
    <h4><%= cocktail.name %></h4>
    <%= link_to 'view details', cocktail_path(cocktail) , class: 'btn btn-primary'%>
  </div>
<% end %>
