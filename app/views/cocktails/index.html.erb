
<div class="all-container">
  <h1>Cocktails</h1>

  <%= link_to 'Add a cocktail', new_cocktail_path, class: 'btn btn-success'  %>

  <div class="cocktails-container">
    <% @cocktails.each do |cocktail| %>
      <div class="cocktail-card">
        <%= cl_image_tag cocktail.photo, width: 133, height: 100, crop: :thumb %>
        <div class="cocktail-description">
          <h4><%= cocktail.name %></h4>
          <%= link_to 'view details', cocktail_path(cocktail) , class: 'btn btn-primary'%>
        </div>
      </div>
    <% end %>
  </div>
</div>


