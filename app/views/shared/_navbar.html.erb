  <!-- Logo -->
  <%= link_to  cl_image_tag("logo_cocktail_i5ikgl" ), cocktails_path, class: "navbar-wagon-brand"%>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">
    <%= link_to 'Mr. Cocktail', '#', class: "navbar-wagon-item navbar-wagon-link" %>

    <!-- Profile picture with dropdown list -->
    <div class="navbar-wagon-item">
      <div class="dropdown">
        <%= image_tag "poghisyo.jpg", {class: "avatar", id: "navbar-wagon-menu"}%>
      </div>
    </div>
